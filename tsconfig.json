{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": ["ES2015"],
        "strict": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}